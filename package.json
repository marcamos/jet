  "license": "ISC",
  "bugs": {
    "url": "https://github.com/marcamos/jet/issues"
  },
  "homepage": "https://github.com/marcamos/jet#readme",
  "devDependencies": {
    "@11ty/eleventy": "^1.0.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.0.24"
  }
}
